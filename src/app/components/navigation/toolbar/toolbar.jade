md-toolbar#toolbar.md-whiteframe-2dp
	.md-toolbar-tools.md-whiteframe-4d(layout="row" layout-align="center center")

		//- Menu button
		md-button.md-icon-button(ng-click="tb.toggleLeft()" hide-md hide-gt-md)
			md-icon(md-svg-src="assets/icons/menu.svg" aria-label="Menu")

		//- Brand
		a(ui-sref="home" layout="row" layout-align="start center" ng-click="tab.setCurrent(0)")
			md-icon(md-svg-src="assets/icons/logo.svg")
			h1(hide show-gt-sm) MetroMed Urgent Care
			h1(hide-gt-sm) MetroMed UC

		span(flex)

		//- Address
		a(ui-sref="map" hide show-gt-sm show-gt-md layout="row")
			md-icon(md-svg-src="assets/icons/ic_place_24px.svg")
			span 952 Edwards Ferry Road NE Leesburg VA
			span(hide) &nbsp;20176

		//- Phone
		a.toolbar-phone(href="tel:(703) 687-4158" hide-xs layout="row")
			md-icon.margin-left(md-svg-src="assets/icons/ic_phone_24px.svg")
			span (703) 687-4158
		md-button.md-fab.md-accent(href="tel:(703) 687-4158" aria-label="Call MetroMed Urgent Care" hide-gt-xs style="margin-right:0")
			md-icon(md-svg-src="assets/icons/ic_phone_24px.svg")

		//- Email
		a(href="mailto:info@metromeduc.com" hide-xs hide-sm hide-md show-lg show-gt-lg layout="row")
			md-icon(md-svg-src="assets/icons/ic_email_24px.svg")
			span info@metromeduc.com

		//- Login
		//- a(ui-sref="login" hide show-gt-lg layout="row" ng-if="!tb.authData")
			md-icon(md-svg-src="assets/icons/enter.svg" aria-label="Login")
			span.toolbar-label Login
		//- md-button.login-btn(ui-sref="login" aria-label="Login MetroMed Urgent Care" hide-gt-lg ng-if="!tb.authData")
			md-tooltip(md-direction="left") Login
			md-icon(md-svg-src="assets/icons/enter.svg")

		//- Profiles
		//- a(ui-sref="profile" hide show-gt-lg layout="row" ng-if="tb.authData")
			md-icon(md-svg-src="assets/icons/enter.svg" aria-label="Profile")
			span.toolbar-label Profile
		//- md-button.login-btn(ui-sref="profile" aria-label="Profile of user of MetroMed Urgent Care" hide-gt-lg ng-if="tb.authData")
			md-tooltip(md-direction="left") Show user profile
			md-icon(md-svg-src="assets/icons/person.svg")