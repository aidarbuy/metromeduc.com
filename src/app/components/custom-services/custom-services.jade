#custom-services(layout="row" 
				 layout-wrap)

	div(ng-repeat="i in cs.data" flex="100" 
								 flex-gt-xs="50" 
								 flex-gt-sm="50" 
								 flex-gt-md="25")

		md-card.md-whiteframe-2dp.stick-to-screen
			md-card-content
				div(layout="column" 
					layout-align="start center")
					md-icon(md-svg-src="assets/icons/custom-services/{{::i.icon}}.svg" 
							size="64" 
							style="fill:#2cbfd9")
					h2.md-title(ng-bind="::i.title")
					p(ng-bind="::i.text")
					md-button.md-primary.md-hue-2(ui-sref="{{::i.href}}" 
										ng-bind="::i.button")