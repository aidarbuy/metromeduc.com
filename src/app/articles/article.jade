style.
	html, body {
		font-size: 100%;
	}

update-title(title="{{ article.header }} - MetroMed Urgent Care")
update-meta(name="description" content="{{ article.teaser }}")
update-meta(name="keywords" content="{{ article.keywords }}")
update-meta(name="author" content="MetroMed Urgent Care")
update-meta(property="og:url" content="https://metromeduc.com/article/{{article.img.src}}")
update-meta(property="og:type" content="article")
update-meta(property="og:title" content="{{ article.header }}")
update-meta(property="og:description" content="{{ article.teaser }}")
update-meta(property="og:image" content="https://metromeduc.com/assets/images/articles/{{ article.img.src }}-600x300.jpg")
update-meta(property="og:image:url" content="https://metromeduc.com/assets/images/articles/{{ article.img.src }}-600x300.jpg")
